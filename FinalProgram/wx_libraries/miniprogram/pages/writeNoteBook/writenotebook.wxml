<!--miniprogram/pages/writeNoteBook/writenotebook.wxml-->
<view class="all">
<input class="input"
    value="{{ Ivalue }}"
    placeholder="请输入标题"
    border="{{ true }}"
    bindinput="onChangeTitle"
    maxlength="6"
  />
<textarea class="textarea" auto-focus cursor-spacing="0"
    value="{{ Tvalue }}" 
    placeholder="请在这输入内容" 
    maxlength="-1"
    bindinput="onChangeNote"
  />
<button class="btn" bindtap='addPerNote'>保存</button>
</view>
